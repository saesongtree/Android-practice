<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <!-- 사용자 아이콘 -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/user" /> <!-- 'user' 아이콘 이미지 리소스로 변경하세요 -->

    <!-- 사용자 이름 'user1' -->
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/profile_image"
        android:layout_alignBottom="@id/profile_image"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/profile_image"
        android:gravity="center_vertical"
        android:text="user1"
        android:textSize="25sp" />

    <!-- 사용자 나이 'nn세' -->

    <!-- 홈 아이콘 -->

    <TextView
        android:id="@+id/user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/user_name"
        android:layout_alignBottom="@id/user_name"
        android:layout_marginStart="22dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/user_name"
        android:gravity="center_vertical"
        android:text="nn세"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/home" /> <!-- 'home' 아이콘 이미지 리소스로 변경하세요 -->

    <!-- 첫 번째 메시지 버블 -->
        <TextView
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/user_age"
            android:layout_margin="16dp"
            android:layout_marginTop="254dp"
            android:background="@drawable/rounded_bg"
            android:gravity="center_horizontal"
            android:text="@string/message_bubble_one"
            android:textSize="15sp"
            android:textStyle="bold" />

    <!-- 두 번째 메시지 버블 -->
    <TextView
        android:id="@+id/message_bubble_two"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/layout_1"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_bg"
        android:gravity="center_horizontal"
        android:text="@string/message_bubble_two"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <!-- 세 번째 메시지 버블 -->
    <TextView
        android:id="@+id/message_bubble_three"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/message_bubble_two"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_bg"
        android:gravity="center_horizontal"
        android:text="@string/message_bubble_three"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <!-- 가까운 병원 찾기 버튼 -->
    <Button
        android:id="@+id/button_find_hospital"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/message_bubble_three"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_bg"
        android:text="가까운 병원 찾기"
        android:textColor="#FFFFFF" />

    <!-- 비상 연락처로 상태 보내기 버튼 -->
    <Button
        android:id="@+id/button_send_status"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/button_find_hospital"
        android:text="비상 연락처로 상태 보내기"
        android:background="@drawable/rounded_bg"
        android:textColor="#FFFFFF"
        android:layout_marginTop="30dp"/>


</RelativeLayout>
</ScrollView>


